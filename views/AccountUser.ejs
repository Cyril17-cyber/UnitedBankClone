<%-include('partials/dashNav')-%>

<div class="userAdmin">
    <% if(account.length == 0) { %>
        <h2>ðŸŒšðŸŒš Nothing To See Here... <a href="/">Head back home</a></h2>
        <% } else { %>
            <div class="user">
                <h2>Account Details</h2>
                <img src="data:account/<%=account.img.contentType%>;base64, 

                     <%=account.img.data.toString('base64')%>" alt="profile" width="100" height="100" class="rounded-circle me-2 circle">
                <div class="detail"><p>Title:</p> <h3><%=account.title%></h3></div>
                <div class="detail"><p>Account Number:</p> <h3><%=account.acctNo%></h3></div>
            <div class="detail"><p>First Name:</p> <h3><%=account.firstName%></h3></div>
            <div class="detail"><p>Middle Name:</p> <h3><%=account.middleName%></h3></div>
            <div class="detail"><p>Last Name:</p> <h3><%=account.lastName%></h3></div>
            <div class="detail"><p>Email:</p> <h3><%=account.email%></h3></div>
            <div class="detail"><p>Mobile Number:</p> <h3><%=account.mobileNo%></h3></div>
            <div class="detail"><p>Date Of Birth:</p> <h3><%=account.dob%></h3></div>
            <div class="detail"><p>Nationality:</p> <h3><%=account.nationality%></h3></div>
            <div class="detail"><p>City:</p> <h3><%=account.city%></h3></div>
            <div class="detail"><p>State:</p> <h3><%=account.state%></h3></div>
            <div class="detail"><p>Country:</p> <h3><%=account.country%></h3></div>
            <div class="detail"><p>Account Type:</p> <h3><%=account.accountType%></h3></div>
            <div class="detail"><p>Account Balance:</p> <h3>$<%=account.balance%></h3></div>
            <div class="detail"><p>Active Status:</p> <% if(account.active){ %>
                <h3>Active</h3>
            <% } else { %>
                <h3>Blocked</h3>
            <% } %> </div>
            <div class="detail buttons">
                <a href="/admin-edit-user/<%=account._id%>"><i class="fa fa-pencil-square-o"></i></a>
                <a id="delete" href="#"><i class="fa fa-trash"></i></a>
            </div>
            <form action="/delete-user" method="post" class="detail popUpDel">
                <input type="hidden" name="id" value="<%=account._id%>">
                <h3>Are You Sure You Want To Delete Your Account?</h3>
                <p>Are you sure about this?</p>
                <div class="buttons">
                    <a href="#" id="cancel">Cancel</a>
                    <button type="submit">Yes</button>
                </div>
            </form>
            </div>
        <% } %>
</div>

</main>
</div>

<script>
    const deleteBtn = document.querySelector('#delete');
    const cancel = document.querySelector('#cancel');
    const user = document.querySelector('.user');
    deleteBtn.addEventListener('click', ()=> {
        user.classList.add('pop');
    });

    cancel.addEventListener('click', ()=> {
        user.classList.remove('pop');
    });
</script>

<%-include('partials/dashFooter')-%>